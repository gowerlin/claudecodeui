[Unit]
Description=Claude Code UI Web Service
Documentation=https://github.com/yourusername/claudecodeui
After=network.target

[Service]
Type=simple
User=claudecodeui
Group=claudecodeui
WorkingDirectory=/opt/claudecodeui
Environment="NODE_ENV=production"
Environment="PORT=3002"
EnvironmentFile=-/etc/claudecodeui/claudecodeui.conf
ExecStart=/usr/bin/node /opt/claudecodeui/server/index.js
Restart=always
RestartSec=10

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/opt/claudecodeui/server/database
ReadWritePaths=/var/log/claudecodeui
ReadWritePaths=/home/claudecodeui/.claude

# Logging
StandardOutput=append:/var/log/claudecodeui/output.log
StandardError=append:/var/log/claudecodeui/error.log

[Install]
WantedBy=multi-user.target